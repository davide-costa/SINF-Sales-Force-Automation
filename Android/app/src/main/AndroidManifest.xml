<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.david.sinfapplication">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            android:name=".Main"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Activities.register_order.register_order_activity">
            android:name=".register_order"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.view_customer.view_customer_activity">
            android:name=".view_customer"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".Activities.product_catalog.product_catalog_activity">
            android:name=".product_catalog"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".Activities.edit_customer.edit_customer_activity">
            android:name=".edit_customer"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>

</manifest>